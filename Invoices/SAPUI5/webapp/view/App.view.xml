<mvc:View controllerName="Alfa.SAPUI5.controller.App" 
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true">
          <Shell id="Shell1">
            <App id="App2">
                <pages>
                    <Page id="pag1App" title="{i18n>appTitle}">
                        <headerContent>
                         <Button id="helloDialogHeader" 
                                 icon="sap-icon://action"
                                 press=".onOpenDialogHeader" 
                                 class="sapUiSmallMarginEnd"/>
                        </headerContent>
                        <content>
                            <mvc:XMLView id="viewApp" viewName="Alfa.SAPUI5.view.HelloPanel"/>
                            <mvc:XMLView id="viewObjList" viewName="Alfa.SAPUI5.view.InvoicesList"/>
                        </content>
                    </Page>
                </pages>
            </App>
          </Shell>
</mvc:View>
