<mvc:View controllerName="Alfa.SAPUI5.controller.App" 
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true">
          <App id="App">
            <pages>
                <Page id="content" title="{i18n>appTitle}">
                    <content>
                        <Panel id="Panel1" headerText="{i18n>helloPanel}">
                            <content>
                                <Button id="btn" text="{i18n>showHelloButtonText}" press=".onShowHello" />
                                <Input id="Var" value="{/recipient/name}" 
                                        description="Hello {/recipient/name}"
                                        valueLiveUpdate="true" 
                                        width="60%" />
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
          </App>
</mvc:View>
