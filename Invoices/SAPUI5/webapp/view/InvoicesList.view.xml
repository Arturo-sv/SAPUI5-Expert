<mvc:View controllerName="Alfa.SAPUI5.controller.InvoicesList"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc">
    <List id="invoiceList" 
          headerText="{i18n>invoiceLisTitle}" 
          class="sapUiResponsiveMargin" 
          width="auto" 
          items="{ path: 'northwind>/Invoices', 
                              sorter : { path : 'ShipperName',
                                         group : true}
                              }">
        <headerToolbar>
            <Toolbar id="toolbar1">
                <Title id="titleInvoicesList" text="{i18n>invoiceLisTitle}"/>
                <ToolbarSpacer id= "toolbarSpace1"/>
                <SearchField id="searchField" width="50%" search=".onFilterInvoices" />
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem id="ObjList1" title="{northwind>Quantity} x {northwind>ProductName}"
                                          number="{ parts : [ {path : 'northwind>ExtendedPrice'},
                                                              {path : 'currency>/usd'}],
                                                    type: 'sap.ui.model.type.Currency',
                                                    formatOptions: {
                                                        showMeasure : false
                                                        }}"    
                                          numberUnit="{currency>/usd}"
                                          numberState="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error'}"> 
            </ObjectListItem>
        </items>
    </List>
</mvc:View>